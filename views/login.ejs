<% include ./partials/head %>



<body id="sign">
<div class="container">

<div class="col-sm-4 col-sm-offset-4">

  <h1 id="sign-tag"> Sign In </h1>

    <!-- LOGIN FORM -->
    <form action="/login" method="post" class="sign-form" id="validate-form">

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

      <div class="input-group">
             <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-envelope"></i>
          </button>
        </div>
        <input type="text" class="form-control" placeholder="Email" name="email" id="email" required>

      </div>
      
      <br/>
      <br/>
      
      
      <div class="input-group">
             <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-lock"></i>
          </button>
        </div>
        <input type="password" class="form-control" placeholder="Password" name="password" id="password" required>

      </div>
      


        <button type="submit" class="btn btn-warning  sign-btn" id="sign-in">Sign In</button>
    </form>
   <p class="sign-label">Need an account? <a href="/signup"> &nbsp;&nbsp;Signup</a></p>


    

</div>

</div>
</body>
</html>